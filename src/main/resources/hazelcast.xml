<hazelcast
        xsi:schemaLocation="http://www.hazelcast.com/schema/config
        http://www.hazelcast.com/schema/config/hazelcast-config-3.8.xsd"
        xmlns="http://www.hazelcast.com/schema/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <group>
        <name>PRODUCTION</name>
        <password>production-password</password>
    </group>
    <properties>
        <property name="hazelcast.logging.type">slf4j</property>
    </properties>
    <management-center enabled="true" update-interval="3">
        http://localhost:8080/mancenter
    </management-center>
    <network>
        <public-address>127.0.0.1:5701</public-address>
        <join>
            <multicast enabled="true"/>
<!--            <tcp-ip enabled="true">
                <members>192.168.1.1-254</members>
            </tcp-ip>-->
        </join>
    </network>

    <map name="contacts">
        <map-store enabled="true">
            <class-name >ua.artem.golovchenko.contacts.cache.dao.ContactMapStoreImpl</class-name>
        </map-store>
        <!--        <max-idle-seconds>0</max-idle-seconds>
                <eviction-policy>LRU</eviction-policy>
                <max-size policy="PER_NODE">5000</max-size>-->

    </map>
    
